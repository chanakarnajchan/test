<body>
<h2>บันทึกการรับประทานอาหาร</h2>

<label>ชื่อ-สกุล</label><br>
<input id="fullname"><br><br>

<label>HN</label><br>
<input id="hn"><br><br>

<label>มื้ออาหาร</label><br>
<input type="radio" name="meal" value="เช้า"> เช้า
<input type="radio" name="meal" value="กลางวัน"> กลางวัน
<input type="radio" name="meal" value="เย็น"> เย็น<br><br>

<label>รูปภาพ</label><br>
<input type="file" id="image" accept="image/*"><br><br>

<label>ปริมาณที่ทาน</label><br>
<input id="amount"><br><br>

<button onclick="submitForm()">บันทึก</button>

<script>
const SCRIPT_URL = "https://script.google.com/macros/s/AKfycbxyfVL01rePYP7zy6js2J1UHcgHtFEgeEY2RB9QpK8Xtf4Zsqgh4dlIMgOYFdOnIGPK6g/exec";

function submitForm() {
  const data = {
    fullname: document.getElementById("fullname").value,
    hn: document.getElementById("hn").value,
    meal: document.querySelector('input[name="meal"]:checked')?.value,
    amount: document.getElementById("amount").value,
    imageUrl: document.getElementById("image").files[0]?.name || ""
  };

  fetch(SCRIPT_URL, {
    method: "POST",
    body: JSON.stringify(data)
  }).then(() => alert("บันทึกข้อมูลเรียบร้อย ✅"));
}
</script>
